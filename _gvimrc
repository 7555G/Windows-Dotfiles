"
" $HOME\_gvimrc
"

"""""""""""""""""""""""""""""""""""""""""""
set nocompatible " be iMproved, required
filetype off     " required

" set the runtime path to include Vundle and initialize
set rtp+=$HOME/.vim/bundle/Vundle.vim/
call vundle#begin('$HOME/.vim/bundle/')

" let Vundle manage Vundle, required
Plugin 'VundleVim/Vundle.vim'

"" plugins start here

"Plugin 'lervag/vimtex'
"Plugin 'LaTeX-Box-Team/LaTeX-Box'
Plugin 'ervandew/supertab'
Plugin 'scrooloose/nerdcommenter'
Plugin 'lazywei/vim-matlab'

"" plugins end here
call vundle#end() " required
"""""""""""""""""""""""""""""""""""""""""""

filetype plugin indent on

" no swap files
set noswapfile
set nobackup
set nowb

" allow use of backspace in instert mode
set backspace=indent,eol,start

set t_Co=256

colorscheme sunyata

set number
set showmatch " show matching parentheses
syntax on

set foldcolumn=1
set cursorline

set sw=4 ts=4 sts=4 " default: 4 spaces per tab
set expandtab

set autoindent
set smartcase
set hlsearch

set whichwrap+=h,l,<,>,[,] " fix line border movement

set wrap lbr  " wrap lines by word

" fix up down movement in wrapped lines
noremap  <buffer> <silent> k gk
noremap  <buffer> <silent> j gj
noremap  <buffer> <silent> 0 g0
noremap  <buffer> <silent> $ g$
noremap  <buffer> <silent> <up> g<up>
noremap  <buffer> <silent> <down> g<down>

" other mappings
nnoremap o o<Esc>

" smart ndent when entering insert mode with i on empty lines
function! IndentWithI()
    if len(getline('.')) == 0
        return "cc"
    else
        return "i"
    endif
endfunction
nnoremap <expr> i IndentWithI()

" LaTeX
let g:tex_flavor = 'latex'
let g:Tex_DefaultTargetFormat = 'pdf'
let g:Tex_TreatMacViewerAsUNIX = 1
let g:Tex_ExecuteUNIXViewerInForeground = 1
let g:Tex_ViewRule_ps = 'S:\Program Files (x86)\Evince-2.32.0.145\bin\evince.exe'
let g:Tex_ViewRule_pdf = 'S:\Program Files (x86)\Evince-2.32.0.145\bin\evince.exe'
let g:Tex_ViewRule_dvi = 'S:\Program Files (x86)\Evince-2.32.0.145\bin\evince.exe'
"let g:vimtex_view_general_viewer = 'S:\Program Files (x86)\Evince-2.32.0.145\bin\evince.exe'
"let g:vimtex_view_general_options = '-r @line @pdf @tex'
"let g:vimtex_view_general_options_latexmk = '-r 1'
"let g:vimtex_compiler_latexmk = {'callback' : 0}
let g:tex_comment_nospell = 1
autocmd BufNewFile,BufRead *.tex set spell spelllang=en_us,el " spell check only .tex file

" Windows only
set lines=24 columns=80
set guifont=fixedsys-mono:h12
set enc=utf8

set guioptions-=m " hide menu bar
set guioptions-=T " hide tool bar
set guioptions-=r " hide scroll bar
